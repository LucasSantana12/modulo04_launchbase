{% extends "layout.njk" %}

{% block content %}
<div class="card">
    <section class="avatar" style="border-radius:8px 0 0 8px;background: url({{member.avatar_url}}) no-repeat center center/ cover "></section>

    <section class="details">
        <h3>Detalhes</h3>

        <div class="item">
            <div>Membro</div>
            <div>{{member.name}}</div>
        </div>

        <div class="item">
            <div>Email</div>
            <div>{{member.email}}</div>
        </div>

        <div class="item">
            <div>Aniversario</div>
            <div>{{member.birth}}</div>
        </div>

        <div class="item">
            <div>Sexo</div>
            <div>{{"Masculino" if member.gender == "M" 
            else "Feminino"}}</div>
        </div>

        

        <div class="item">
            <div>Tipo Sangu√≠neo</div>
            <div>{{member.blood}}</div>
        </div>

         <div class="item">
            <div>Altura</div>
            <div>{{member.height}} Cm</div>
        </div>

         <div class="item">
            <div>Peso</div>
            <div>{{member.weight}} Kg</div>
        </div>



        <a href="/members/{{ member.id }}/edit" class="button">Editar</a>

    </section>
</div>
{% endblock content %}